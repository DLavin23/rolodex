%table(aria-activedescendant="{{ activeDateId }}" aria-labelledby="{{uniqueId }}-title" role="grid")
  
  %thead
    
    %tr
      %th.prev.available(ng-click="move(-1)" tabindex="-1")
        .i-caret
      %th.month(colspan="{{ 5 + showWeeks }}")
        {{ title }}
      %th.next.available(ng-click="move(1)" tabindex="-1")
        .i-caret
    
    %tr
      %th.text-center(ng-repeat="label in labels track by $index")
        %small(aria-label="{{ label.full}}") {{ label.abbr }}

  %tbody
    %tr(ng-repeat="row in rows track by $index")
      %td(aria-disabled="{{ !!dt.disabled }}" id="{{ dt.uid }}" role="gridcell" tabindex="-1" ng-repeat="dt in row track by dt.date" ng-class="{active: dt.selected, available: !dt.disabled, off: dt.disabled}" ng-click="select(dt.date, dt.disabled)" ng-disabled="dt.disabled")
        %span(ng-class="{'text-muted': dt.secondary}") {{ dt.label }}
